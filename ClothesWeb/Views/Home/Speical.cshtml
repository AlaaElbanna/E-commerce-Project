@model List<ClothesEntities.Product>
    @{
        ViewBag.Title = "Speical";
    }

    <div class="product-content product-fourcolumn clearfix">
        <ul class="product style2 isotope-product clearfix">
            @if (Model != null)
            {
                foreach (var item in @Model)
                {

                <li class="InSpecial product-item kid woman">
                    <div class="product-thumb clearfix">
                        <a href="#">
                            <img  style="height:300px;padding:2px;padding-bottom:7px;width:100%;background-size:cover"src="@item.ImageURL" alt="image">
                        </a>
                    </div>
                    <div class="product-info clearfix">
                        <span class="product-title">@item.Description</span>
                        <div class="price">
                            <ins>
                                <span class="amount">@item.Price</span>
                            </ins>
                        </div>
                        <ul class="flat-color-list width-14">
                            <li>
                                <a href="#" class="red"></a>
                            </li>
                            <li>
                                <a href="#" class="blue"></a>
                            </li>
                            <li>
                                <a href="#" class="black"></a>
                            </li>
                        </ul>
                    </div>
                    <div class="add-to-cart text-center Special" data-id="@item.ID">
                        <a>ADD TO CART</a>
                    </div>
                    <a href="#" class="like"><i class="fa fa-heart-o"></i></a>
                </li>
                }
            }
        </ul>
    </div>
    <script>
    $(".Special").click(function () {
            var Id = $(this).attr('data-id');
            products.push(Id);
            $.cookie("Products", products.join('-'), { path: '/' });
            alert("addedFrom Sprcial");
        });
    </script>